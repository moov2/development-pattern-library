{
  "name": "development-pattern-library",
  "version": "0.1.0",
  "dependencies": {
    "@frctl/fractal": "^1.1.7",
    "@frctl/mandelbrot": "^1.2.0"
  },
  "devDependencies": {
    "clean-css-cli": "^4.1.10",
    "modern-normalize": "^0.4.0",
    "node-sass": "^4.5.3",
    "nodemon": "^1.12.1"
  },
  "fractal": {
    "main": "fractal.js"
  },
  "scripts": {
    "build-css": "node-sass --include-path scss styles/styles.scss public/css/styles.css",
    "clean-css": "cleancss -o public/css/styles.min.css public/css/styles.css",
    "watch-css": "nodemon -e scss -x \"npm run build-css && npm run clean-css\"",
    "develop": "start fractal.cmd start --sync && start npm run watch-css",
    "build": "start fractal.cmd build",
    "dist": "npm run build-css && npm run build"
  }
}
